@model WebMVC3.Models.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/App_Themes/Theme1/CommonStyles.css" rel="stylesheet" />
</head>
<body>
    <form method="post">
        <div class="container">
            <h2>Add Product</h2>
            <div class="form-group">
                <label for="txtName">Product Name:</label>
                <input type="text" name="Name" id="txtName" class="form-control">
            </div>

            <div class="form-group">
                <label for="ddlCategory">Category:</label>
                <input type="text" name="Category" class="form-control"/>
            </div>

            <div class="form-group">
                <label for="txtPrice">Price:</label>
                <input type="number" name="Price" id="txtPrice" class="form-control">
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </div>
    </form>
</body>
</html>
